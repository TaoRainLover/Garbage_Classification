// 导入 wepy 框架
import wepy from '@wepy/core'
wepy.page({
  data: {
    windowHeight: '',
    remainHeight: '',
    // 反馈类型：
    advise: true,
    system: false,
    account: false,
    other: false,
    type: 'advise',

    // 提交内容
    title: '',
    content: '',
    imgUrlList: [],
  },
  methods: {
    // 更改反馈类型
    changeType(type) {
      switch (type) {
        case 'advise': {
          this.advise = true
          this.system = false
          this.account = false
          this.other = false
          this.type = 'advise'
          break
        }
        case 'system': {
          this.advise = false
          this.system = true
          this.account = false
          this.other = false
          this.type = 'system'
          break
        }
        case 'account': {
          this.advise = false
          this.system = false
          this.account = true
          this.other = false
          this.type = 'account'
          break
        }
        case 'other': {
          this.advise = false
          this.system = false
          this.account = false
          this.other = true
          this.type = 'other'
          break
        }
      }
    },

    // 提交反馈
    submit() {
      if (this.title.length === 0) {
        wx.showToast({
          title: '请填写标题!', //提示的内容,
          icon: 'none', //图标,
          duration: 1500, //延迟时间,
        })
      } else if (this.content.length === 0) {
        wx.showToast({
          title: '请填写问题描述!',
          icon: 'none',
          duration: 1500,
        })
      } else if (this.content.length < 10) {
        wx.showToast({
          title: '问题描述不少于10字符!',
          icon: 'none',
        })
      } else {
        // TODO: 提交反馈至后台服务器
        console.log(this.type)
        console.log(this.title)
        console.log(this.content)
        wx.request({
          url: 'https://rainlover.fun:3006/api/feedback/submit',
          method: 'POST',
          data: {
            openid: this.$app.$options.globalData.openid,
            type: this.type,
            title: this.title,
            des: this.content,
          },
          success: (res) => {
            console.log(res.data)
            if (res.data.status == 0) {
              wx.showToast({
                title: '提交成功!',
                duration: 2000,
              })
              this.title = ''
              this.content = ''
              this.changeType('advise')
            }
          },
