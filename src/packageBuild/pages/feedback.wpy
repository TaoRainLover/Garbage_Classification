          },
        })
      }
    },
  },
  computed: {
    titleCount() {
      return this.title.length
    },
    contentCount() {
      return this.content.length
    },
  },

  // 生命周期函数 created
  created() {
    this.remainHeight = this.$app.$options.globalData.remainHeight + 'px'
    console.log(this.windowHeight)
  },
})
</script>

